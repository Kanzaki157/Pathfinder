<%= render 'flash_messages' %>
<div class="container ">
  <div class="row">
    <div class="col-md-6">
      <h2>あなたのプロフィール</h2>
      <table class="table table-borderless">
        <tr>
          <th>名前</th>
          <td><%= @user.first_name %> <%= @user.last_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>Follows</th>
          <td><h6><%= @user.follower_users.count %></h6></td>
        </tr>
        <tr>
          <th>Followers</th>
          <td><h6><%= @user.following_users.count %></h6></td>
        </tr> 
        <% if current_user != @user %>
          <td>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
            <% end %>
          </td>
        <% end %>
      </table>
      <%= link_to 'メールアドレス・パスワードの編集', edit_user_registration_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>お気に入りしたイベント</h2>
      <ul>
        <% @user.event_favorites.each do |favorite| %>
          <li><%= link_to favorite.event.name, favorite.event %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
