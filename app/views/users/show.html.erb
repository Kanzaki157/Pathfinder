<div class="container">
  <div class="row">
    <div class="col-md-6 ">
      <h2>あなたのプロフィール</h2>
        <table class="table table-borderless">
          <tr>
            <th>名前</th>
              <td><%= @user.first_name %> <%= @user.last_name %></td>
                </tr>
                  <tr>
                    <th>メールアドレス</th>
                      <td><%= @user.email %></td>
                        </tr>
                      <th>Follows</th>
                    <td>
                  <h6><%= @user.followers.count %></h6>
              </td>
            </tr>
          <tr>  
        <th>Followers</th>
          <td>  
              <h6><%= @user.followeds.count %></h6>
          </td>
        </tr> 
      <td>
        <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
            <% end %>
          <% end %>
      </td>
      </table>
      <%= link_to 'プロフィール編集', edit_user_registration_path %>
    </div>
    <div class="col-md-6">
      <h2>お気に入りしたイベント</h2>
      <ul>
        <% @user.event_favorites.each do |favorite| %>
          <li><%= link_to favorite.event.name, favorite.event %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>作成したイベント</h2>
        <ul>
          <% @user_events.each do |event| %>
            <li>
              <%= link_to event.representative, event %> 
            <%= link_to '削除', event, method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>