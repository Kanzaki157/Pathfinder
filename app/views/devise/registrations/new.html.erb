<div class="container mt-5 mb-5">
  <div class="card">
    <div class="card-header">
      <h2 class="mb-0">新規会員登録</h2>
    </div>
    <div class="card-body">
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>

        <div class="form-group row">
          <%= f.label :first_name, "(姓)", class: 'col-sm-2 col-form-label' %>
          <%= f.text_field :first_name, class: 'form-control col-sm-3', autofocus: true, required: true, placeholder: "令和" %>

          <%= f.label :last_name, "(名)", class: 'col-sm-1 col-form-label' %>
          <%= f.text_field :last_name, class: 'form-control col-sm-5', required: true, placeholder: "道子" %>
        </div>

        <div class="form-group row">
          <%= f.label :first_name_kana, "(セイ)", class: 'col-sm-2 col-form-label' %>
          <%= f.text_field :first_name_kana, class: 'form-control col-sm-3', required: true, placeholder: "レイワ" %>

          <%= f.label :last_name_kana, "(メイ)", class: 'col-sm-1 col-form-label' %>
          <%= f.text_field :last_name_kana, class: 'form-control col-sm-5', required: true, placeholder: "ミチコ" %>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: 'col-sm-2 col-form-label' %>
          <%= f.email_field :email, class: 'form-control col-sm-9', required: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="form-group row">
          <%= f.label :post_code, "郵便番号(ハイフンなし)", class: 'col-sm-2 col-form-label' %>
          <%= f.text_field :post_code, class: 'form-control col-sm-9', required: true, placeholder: "0000000" %>
        </div>

        <div class="form-group row">
          <%= f.label :address, "住所", class: 'col-sm-2 col-form-label' %>
          <%= f.text_field :address, class: 'form-control col-sm-9', required: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="form-group row">
          <%= f.label :phone_number, "電話番号(ハイフンなし)", class: 'col-sm-2 col-form-label' %>
          <%= f.text_field :phone_number, class: 'form-control col-sm-9', required: true, placeholder: "00000000000" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class: 'col-sm-2 col-form-label' %>
          <%= f.password_field :password, class: 'form-control col-sm-9', required: true, autocomplete: "new-password" %>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: 'col-sm-2 col-form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control col-sm-9', required: true, autocomplete: "new-password" %>
        </div>

        <div class="form-group row">
          <div class="col-sm-10 offset-sm-2">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <h3 class="mb-3">既に登録済みの方は</h3>
      <%= link_to 'こちらからログインしてください。', new_user_session_path %>
    </div>
  </div>
</div>
