<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="container">
    <div class="card">
      <div class="card-header text-center">
        ユーザー情報編集
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">確認中のメールアドレス: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :password, "パスワード" %> <small class="text-muted">(変更しない場合は空白のまま)</small>
            <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">最小文字数：<%= @minimum_password_length %> 文字</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワードの確認" %>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, "現在のパスワード" %> <small class="text-muted">(変更を確認するための現在のパスワードが必要)</small>
            <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
          </div>

          <div class="text-center">
            <%= f.submit "更新する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "戻る", :back, class: 'btn btn-secondary' %>
          <%= button_to "アカウントを削除", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "本当にアカウントを削除してもよろしいですか？" }, method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
